{
    "$id": "http://meshery.layer5.io/definition/Workload/IstioMesh",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "IstioMesh",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "description": "version of istio service mesh"
        },
        "profile":{
            "type":"string",
            "enum": ["default","minimal","demo"],
            "description": "name of the profile"
        },
        "dataplaneNamespace":{
            "items": {
                "type": "string"
               },
               "type": "array",
            "description": "Namespaces of the data plane"
        }
    },
    "required": ["version","profile"]
}